model Otp {
  id        String   @unique @default(uuid())
  otp       String
  token     String
  User      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    String
  type      OtpType
  isUsed    Boolean  @default(false)
  expiredAt DateTime
  createdAt DateTime @default(now())
}

enum OtpType {
  TWO_FACTOR
  RESET_PASSWORD
  REGISTER_ACCOUNT
}
