model Otp {
  id        String   @unique @default(uuid())
  otp       String
  token     String
  UserId    User     @relation(fields: [userId], references: [id])
  userId    String
  type      OtpType
  isUsed    Boolean  @default(false)
  expiredAt DateTime
}

enum OtpType {
  TWO_FACTOR
  RESET_PASSWORD
  REGISTER_ACCOUNT
}
